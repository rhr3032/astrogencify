---
import Button from "./Button.astro";
import type { Link } from "../types";

interface Plan {
  title: string;
  price: string;
  note: string;
  features: string[];
  link: Link;
}

interface Props {
  title: string;
  subtitle?: string;
  items: Plan[];
}

const { title, subtitle, items } = Astro.props;
---

<section class="sy-pricing-grid">
  <div class="u-container container">
    <div class="heading">
      <h2 class="u-heading title" data-sy-reveal="words">{title}</h2>
      {subtitle ? (
        <p class="u-text subtitle" data-sy-reveal="lines">{subtitle}</p>
      ) : null}
    </div>
    <div class="grid">
      {items.map((plan, index) => (
        <article class:list={["card", "glass-card", index === 1 && "is-featured"]}>
          <h3 class="u-heading" data-sy-reveal="words">{plan.title}</h3>
          <p class="u-heading price" data-sy-reveal="words">
            {plan.price}
          </p>
          <p class="u-text note" data-sy-reveal="lines">{plan.note}</p>
          <ul class="u-text features">
            {plan.features.map((feat) => (
              <li>{feat}</li>
            ))}
          </ul>
          <Button {...plan.link} color={index === 1 ? "primary" : "primary-alt"} />
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .sy-pricing-grid {
    margin: 8rem 0;
    position: relative;
    z-index: 2;
  }

  .heading {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2.5rem;
  }

  .title {
    --fs: 2.8rem;
  }

  .subtitle {
    --fs: var(--font-size-md);
    color: var(--color-text-alt);
    max-width: 40em;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-tablet) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    @media (--mq-phone) {
      grid-template-columns: 1fr;
    }
  }

  .card {
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: none;
  }

  .card.is-featured {
    border-color: rgba(var(--rgb-brand-1), 0.4);
    box-shadow: 0 20px 40px rgba(120, 90, 240, 0.25);
  }

  .card h3 {
    --fs: 1.35rem;
    --fw: 500;
  }

  .price {
    --fs: 2.5rem;
    --fw: 500;
  }

  .note {
    --fs: var(--font-size-xs);
    color: var(--color-text-alt);
  }

  .features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
    --fs: var(--font-size-sm);
    color: var(--color-text-alt);
  }

  .features li::before {
    content: "";
    display: inline-block;
    width: 0.6em;
    height: 0.6em;
    margin-right: 0.6em;
    background: var(--color-brand-1);
    border-radius: 50%;
  }
</style>
