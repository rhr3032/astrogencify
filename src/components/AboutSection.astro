---
interface Props {
  title: string;
  subtitle?: string;
  text: string;
  stats: { value: string; label: string }[];
}

const { title, subtitle, text, stats } = Astro.props;
---

<section class="sy-about">
  <div class="u-container container">
    <div class="intro">
      {subtitle ? (
        <p class="u-text eyebrow" data-sy-reveal="words">{subtitle}</p>
      ) : null}
      <h2 class="u-heading title" data-sy-reveal="words">{title}</h2>
      <p class="u-text text" data-sy-reveal="lines">{text}</p>
    </div>
    <div class="stats">
      {stats.map((item) => (
        <div class="stat glass-card">
          <p class="u-heading value" data-sy-reveal="words">{item.value}</p>
          <p class="u-text label" data-sy-reveal="lines">{item.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .sy-about {
    margin: 8rem 0 4rem;
    position: relative;
    z-index: 2;
  }

  .container {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 3rem;

    @media (--mq-tablet) {
      grid-template-columns: 1fr;
    }
  }

  .intro {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .eyebrow {
    --fs: var(--font-size-xs);
    --fw: 600;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-text-alt);
  }

  .title {
    --fs: 3rem;
    --lh: 1.1;
  }

  .text {
    max-width: 34em;
    color: var(--color-text-alt);
  }

  .stats {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-phone) {
      grid-template-columns: 1fr;
    }
  }

  .stat {
    padding: 1.5rem;
    border-radius: 1.25rem;
    background: transparent;
    border: none;
    box-shadow: none;
  }

  .value {
    --fs: 2.4rem;
    --fw: 500;
  }

  .label {
    --fs: var(--font-size-sm);
    color: var(--color-text-alt);
  }
</style>
