---
import Button from "./Button.astro";
import type { Link } from "../types";

interface Service {
  title: string;
  text: string;
  tags?: string[];
  link: Link;
}

interface Props {
  title: string;
  subtitle?: string;
  items: Service[];
  cta?: Link;
}

const { title, subtitle, items, cta } = Astro.props;
---

<section class="sy-services">
  <div class="u-container container">
    <div class="heading">
      <h2 class="u-heading title" data-sy-reveal="words">{title}</h2>
      {subtitle ? (
        <p class="u-text subtitle" data-sy-reveal="lines">{subtitle}</p>
      ) : null}
      {cta ? <Button {...cta} arrow class="cta" /> : null}
    </div>
    <div class="grid">
      {items.map((item) => (
        <article class="card glass-card">
          <div class="card-top">
            <h3 class="u-heading" data-sy-reveal="words">{item.title}</h3>
            {item.tags ? (
              <div class="tags">
                {item.tags.map((tag) => (
                  <span class="u-text">{tag}</span>
                ))}
              </div>
            ) : null}
          </div>
          <p class="u-text" data-sy-reveal="lines">{item.text}</p>
          <Button {...item.link} size="sm" color="primary-alt" />
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .sy-services {
    margin: 8rem 0;
    position: relative;
    z-index: 2;
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .heading {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .title {
    --fs: 2.8rem;
  }

  .subtitle {
    --fs: var(--font-size-md);
    color: var(--color-text-alt);
    max-width: 44em;
  }

  .cta {
    margin-top: 0.5rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-desktop-sm) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    @media (--mq-phone) {
      grid-template-columns: 1fr;
    }
  }

  .card {
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
    box-shadow: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: 0 12px 28px rgba(10, 20, 40, 0.08);
  }

  .card h3 {
    --fs: 1.35rem;
    --fw: 500;
  }

  .card p {
    --fs: var(--font-size-sm);
    color: var(--color-text-alt);
  }

  .card-top {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tags span {
    --fs: var(--font-size-xs);
    padding: 0.25rem 0.6rem;
    border-radius: 999px;
    background: var(--color-brand-3);
    color: var(--color-text);
  }
</style>
