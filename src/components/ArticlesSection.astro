---
import Button from "./Button.astro";
import type { Image, Link } from "../types";

interface Article {
  image: Image;
  title: string;
  excerpt: string;
  meta: string[];
  link: Link;
}

interface Props {
  title: string;
  subtitle?: string;
  items: Article[];
  cta?: Link;
}

const { title, subtitle, items, cta } = Astro.props;
---

<section class="sy-articles">
  <div class="u-container container">
    <div class="heading">
      <div>
        <h2 class="u-heading title" data-sy-reveal="words">{title}</h2>
        {subtitle ? (
          <p class="u-text subtitle" data-sy-reveal="lines">{subtitle}</p>
        ) : null}
      </div>
      {cta ? <Button {...cta} arrow class="cta" /> : null}
    </div>
    <div class="grid">
      {items.map((item) => (
        <article class="card glass-card">
          <div class="thumb">
            <img {...item.image} loading="lazy" />
          </div>
          <div class="meta u-text">
            {item.meta.map((m) => (
              <span>{m}</span>
            ))}
          </div>
          <h3 class="u-heading" data-sy-reveal="words">{item.title}</h3>
          <p class="u-text" data-sy-reveal="lines">{item.excerpt}</p>
          <Button {...item.link} size="sm" color="primary-alt" />
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .sy-articles {
    margin: 8rem 0;
    position: relative;
    z-index: 2;
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .heading {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 1.5rem;

    @media (--mq-tablet) {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  .title {
    --fs: 2.8rem;
  }

  .subtitle {
    --fs: var(--font-size-md);
    color: var(--color-text-alt);
    max-width: 42em;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-desktop-sm) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    @media (--mq-phone) {
      grid-template-columns: 1fr;
    }
  }

  .card {
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: 0 12px 28px rgba(10, 20, 40, 0.08);
  }

  .thumb {
    position: relative;
    width: 100%;
    border-radius: 1.1rem;
    overflow: hidden;
    aspect-ratio: 16 / 10;
  }

  .thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1rem;
    --fs: var(--font-size-xs);
    color: var(--color-text-alt);
  }

  .card h3 {
    --fs: 1.35rem;
    --fw: 500;
  }

  .card p {
    --fs: var(--font-size-sm);
    color: var(--color-text-alt);
  }
</style>
