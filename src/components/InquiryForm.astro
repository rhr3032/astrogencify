---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="sy-inquiry">
  <div class="u-container container">
    <div class="content">
      <h2 class="u-heading title" data-sy-reveal="words">{title}</h2>
      {subtitle ? (
        <p class="u-text subtitle" data-sy-reveal="lines">{subtitle}</p>
      ) : null}
      <ul class="u-text highlights">
        <li>Branding to UI and UX design</li>
        <li>Web and mobile development</li>
        <li>SaaS, ERP, and LMS delivery</li>
        <li>QA and test automation</li>
      </ul>
    </div>
    <form class="form glass-card">
      <div class="field">
        <label for="inq-name">Full name</label>
        <input id="inq-name" name="name" type="text" required />
      </div>
      <div class="field">
        <label for="inq-email">Work email</label>
        <input id="inq-email" name="email" type="email" required />
      </div>
      <div class="field">
        <label for="inq-company">Company</label>
        <input id="inq-company" name="company" type="text" />
      </div>
      <div class="field">
        <label for="inq-service">Primary service</label>
        <select id="inq-service" name="service" required>
          <option value="">Select a service</option>
          <option>Branding and identity</option>
          <option>UI and UX design</option>
          <option>Web development</option>
          <option>Mobile app development</option>
          <option>SaaS product</option>
          <option>ERP or LMS system</option>
          <option>QA and testing</option>
        </select>
      </div>
      <div class="field">
        <label for="inq-budget">Budget range</label>
        <select id="inq-budget" name="budget">
          <option value="">Select budget</option>
          <option>Under 10k</option>
          <option>10k to 30k</option>
          <option>30k to 60k</option>
          <option>60k to 120k</option>
          <option>120k+</option>
        </select>
      </div>
      <div class="field">
        <label for="inq-timeline">Timeline</label>
        <select id="inq-timeline" name="timeline">
          <option value="">Select timeline</option>
          <option>2 to 4 weeks</option>
          <option>1 to 2 months</option>
          <option>3 to 4 months</option>
          <option>5 months or more</option>
        </select>
      </div>
      <div class="field full">
        <label for="inq-message">Project summary</label>
        <textarea id="inq-message" name="message" rows={4}></textarea>
      </div>
      <button type="submit" class="submit">Request proposal</button>
    </form>
  </div>
</section>

<style>
  .sy-inquiry {
    margin: 8rem 0;
    position: relative;
    z-index: 2;
  }

  .container {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 3rem;

    @media (--mq-tablet) {
      grid-template-columns: 1fr;
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .title {
    --fs: 2.6rem;
  }

  .subtitle {
    --fs: var(--font-size-md);
    color: var(--color-text-alt);
  }

  .highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.6rem;
    --fs: var(--font-size-sm);
    color: var(--color-text-alt);
  }

  .highlights li::before {
    content: "";
    display: inline-block;
    width: 0.45em;
    height: 0.45em;
    margin-right: 0.6em;
    border-radius: 50%;
    background: var(--color-brand-1);
  }

  .form {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1rem;
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
    box-shadow: none;

    @media (--mq-phone) {
      grid-template-columns: 1fr;
    }
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .field.full {
    grid-column: 1 / -1;
  }

  label {
    --fs: var(--font-size-xs);
    --fw: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text-alt);
  }

  input,
  select,
  textarea {
    border-radius: 0.8rem;
    border: 1px solid rgba(var(--rgb-text), 0.15);
    padding: 0.75rem 1rem;
    font: inherit;
    color: var(--color-text);
    background: rgba(255, 255, 255, 0.9);
  }

  textarea {
    resize: vertical;
    min-height: 8rem;
  }

  .submit {
    grid-column: 1 / -1;
    border-radius: 999px;
    border: none;
    padding: 0.85rem 1.5rem;
    background: var(--color-brand-1);
    color: var(--color-white);
    cursor: pointer;
    font-weight: 600;
    letter-spacing: 0.02em;
  }
</style>
