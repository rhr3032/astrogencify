---
import Layout from "../../layouts/Layout.astro";
import HeroHome from "../../components/HeroHome.astro";
import Button from "../../components/Button.astro";
---

<Layout title="B2B CRM and RevOps Alignment">
  <HeroHome
    title="B2B CRM and RevOps Alignment"
    subtitle="Unify sales, marketing, and support data for a complete revenue view."
    cta={{ title: "Start a Project", url: "/contact" }}
  />

  <section class="article">
    <div class="u-container">
      <div class="meta u-text">B2B • 8 min read • Nov 12, 2025</div>
      <div class="content glass-card">
        <h2 class="u-heading">Unify the pipeline</h2>
        <p class="u-text">
          Align metrics and workflows across marketing, sales, and customer
          success to reduce churn and improve forecasting.
        </p>
        <h3 class="u-heading">Key moves</h3>
        <ul class="u-text">
          <li>Single source of truth for accounts</li>
          <li>Shared definitions for lifecycle stages</li>
          <li>Automation for handoffs and alerts</li>
          <li>Revenue dashboards for leadership</li>
        </ul>
        <h3 class="u-heading">Systems</h3>
        <p class="u-text">
          Integrate CRM, marketing automation, and support tooling.
        </p>
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="u-container">
      <h2 class="u-heading">Align your revenue operations</h2>
      <Button title="Talk to us" url="/contact" arrow />
    </div>
  </section>
</Layout>

<style>
  .article {
    margin: 6rem 0;
  }

  .meta {
    margin-bottom: 1.5rem;
    color: var(--color-text-alt);
  }

  .content {
    padding: 2.5rem;
    border-radius: 1.5rem;
    display: grid;
    gap: 1rem;
  }

  .content h2 {
    --fs: 2rem;
  }

  .content h3 {
    --fs: 1.2rem;
    --fw: 500;
  }

  .content ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
    color: var(--color-text-alt);
  }

  .cta {
    margin: 4rem 0 8rem;
  }
</style>
