---
import Layout from "../../layouts/Layout.astro";
import HeroHome from "../../components/HeroHome.astro";
import Button from "../../components/Button.astro";
---

<Layout title="QA and Testing">
  <HeroHome
    title="QA and Testing"
    subtitle="Manual and automated QA to improve release confidence."
    cta={{ title: "Start a Project", url: "/contact" }}
  />

  <section class="detail">
    <div class="u-container">
      <div class="intro">
        <h2 class="u-heading">Overview</h2>
        <p class="u-text">
          Our QA team ensures every release meets performance and quality
          standards. We build test plans, automate key flows, and support your
          release process.
        </p>
      </div>
      <div class="grid">
        <div class="card glass-card">
          <h3 class="u-heading">Deliverables</h3>
          <ul class="u-text">
            <li>Test strategy and coverage</li>
            <li>Manual and automated testing</li>
            <li>Regression and performance testing</li>
            <li>Release readiness reporting</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Process</h3>
          <ul class="u-text">
            <li>QA discovery and audit</li>
            <li>Test plan and scripts</li>
            <li>Automation pipelines</li>
            <li>Release support</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Tools</h3>
          <ul class="u-text">
            <li>Cypress and Playwright</li>
            <li>Postman and JMeter</li>
            <li>CI and reporting tools</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="u-container">
      <h2 class="u-heading">Improve release confidence</h2>
      <Button title="Talk to us" url="/contact" arrow />
    </div>
  </section>
</Layout>

<style>
  .detail {
    margin: 6rem 0;
  }

  .intro {
    max-width: 42rem;
    margin-bottom: 2.5rem;
  }

  .intro h2 {
    --fs: 2.4rem;
  }

  .intro p {
    color: var(--color-text-alt);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-tablet) {
      grid-template-columns: 1fr;
    }
  }

  .card {
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
  }

  .card h3 {
    --fs: 1.2rem;
    --fw: 500;
    margin-bottom: 1rem;
  }

  .card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
    color: var(--color-text-alt);
  }

  .cta {
    margin: 4rem 0 8rem;
  }

  .cta h2 {
    --fs: 2.2rem;
    margin-bottom: 1rem;
  }
</style>
