---
import Layout from "../../layouts/Layout.astro";
import HeroHome from "../../components/HeroHome.astro";
import Button from "../../components/Button.astro";
---

<Layout title="Framer Design & Development">
  <HeroHome
    title="Framer Design & Development"
    subtitle="Interactive Framer sites with smooth animations and smart components."
    cta={{ title: "Start a Project", url: "/contact" }}
  />

  <section class="detail">
    <div class="u-container">
      <div class="intro">
        <h2 class="u-heading">Overview</h2>
        <p class="u-text">
          We create immersive, interactive websites using Framer, combining
          design and development in one powerful tool. Our expertise in Framer
          allows us to build highly animated, responsive sites with seamless
          user experiences that stand out from the competition.
        </p>
      </div>
      <div class="grid">
        <div class="card glass-card">
          <h3 class="u-heading">Deliverables</h3>
          <ul class="u-text">
            <li>Custom Framer site design</li>
            <li>Advanced scroll animations</li>
            <li>Interactive components</li>
            <li>CMS & dynamic content</li>
            <li>Responsive design system</li>
            <li>Performance optimization</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Process</h3>
          <ul class="u-text">
            <li>Concept & wireframing</li>
            <li>Design system setup</li>
            <li>Interactive prototyping</li>
            <li>Component development</li>
            <li>Animation polish</li>
            <li>Launch & support</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Expertise</h3>
          <ul class="u-text">
            <li>Framer Professional Partners</li>
            <li>React & TypeScript</li>
            <li>Custom code overrides</li>
            <li>API integrations</li>
            <li>Advanced interactions</li>
            <li>Motion design principles</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="u-container">
      <h2 class="u-heading">Create an interactive Framer experience</h2>
      <Button title="Let's talk" url="/contact" arrow />
    </div>
  </section>
</Layout>

<style>
  .detail {
    margin: 6rem 0;
  }

  .intro {
    max-width: 42rem;
    margin-bottom: 2.5rem;
  }

  .intro h2 {
    --fs: 2.4rem;
  }

  .intro p {
    color: var(--color-text-alt);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-tablet) {
      grid-template-columns: 1fr;
    }
  }

  .card {
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
  }

  .card h3 {
    --fs: 1.2rem;
    --fw: 500;
    margin-bottom: 1rem;
  }

  .card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
    color: var(--color-text-alt);
  }

  .cta {
    margin: 4rem 0 8rem;
  }

  .cta h2 {
    --fs: 2.2rem;
    margin-bottom: 1rem;
  }
</style>
