---
import Layout from "../../layouts/Layout.astro";
import HeroHome from "../../components/HeroHome.astro";
import Button from "../../components/Button.astro";
---

<Layout title="Legal Industry Solutions">
  <HeroHome
    title="Legal Industry Solutions"
    subtitle="Legal tech platforms that streamline case management and client services."
    cta={{ title: "Discuss Your Project", url: "/contact" }}
  />

  <section class="detail">
    <div class="u-container">
      <div class="intro">
        <h2 class="u-heading">Legal Technology for Modern Practices</h2>
        <p class="u-text">
          We build legal technology platforms that help law firms and legal
          departments work more efficiently. From case management to document
          automation, our solutions reduce administrative burden and improve
          client service delivery.
        </p>
      </div>
      <div class="grid">
        <div class="card glass-card">
          <h3 class="u-heading">Solutions</h3>
          <ul class="u-text">
            <li>Case management systems</li>
            <li>Client portals</li>
            <li>Document automation</li>
            <li>E-discovery platforms</li>
            <li>Time tracking & billing</li>
            <li>Legal research tools</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Features</h3>
          <ul class="u-text">
            <li>Secure document storage</li>
            <li>Client communication</li>
            <li>Calendar & deadline tracking</li>
            <li>Contract templates</li>
            <li>E-signature integration</li>
            <li>Conflict checking</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Compliance</h3>
          <ul class="u-text">
            <li>Attorney-client privilege</li>
            <li>Data encryption</li>
            <li>Audit trails</li>
            <li>GDPR & privacy compliance</li>
            <li>Access controls</li>
            <li>Secure cloud hosting</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="u-container">
      <h2 class="u-heading">Modernize your legal practice</h2>
      <Button title="Get started" url="/contact" arrow />
    </div>
  </section>
</Layout>

<style>
  .detail {
    margin: 6rem 0;
  }

  .intro {
    max-width: 42rem;
    margin-bottom: 2.5rem;
  }

  .intro h2 {
    --fs: 2.4rem;
  }

  .intro p {
    color: var(--color-text-alt);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-tablet) {
      grid-template-columns: 1fr;
    }
  }

  .card {
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
  }

  .card h3 {
    --fs: 1.2rem;
    --fw: 500;
    margin-bottom: 1rem;
  }

  .card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
    color: var(--color-text-alt);
  }

  .cta {
    margin: 4rem 0 8rem;
  }

  .cta h2 {
    --fs: 2.2rem;
    margin-bottom: 1rem;
  }
</style>
