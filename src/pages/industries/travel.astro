---
import Layout from "../../layouts/Layout.astro";
import HeroHome from "../../components/HeroHome.astro";
import Button from "../../components/Button.astro";
---

<Layout title="Travel & Hospitality Industry">
  <HeroHome
    title="Travel & Hospitality Industry"
    subtitle="Booking platforms that inspire travel and delight guests."
    cta={{ title: "Discuss Your Project", url: "/contact" }}
  />

  <section class="detail">
    <div class="u-container">
      <div class="intro">
        <h2 class="u-heading">Travel Technology That Converts</h2>
        <p class="u-text">
          We create travel and hospitality platforms that inspire wanderlust and
          make booking effortless. From accommodation booking to travel planning,
          our solutions help travel brands increase bookings and enhance guest
          experiences.
        </p>
      </div>
      <div class="grid">
        <div class="card glass-card">
          <h3 class="u-heading">Solutions</h3>
          <ul class="u-text">
            <li>Hotel booking platforms</li>
            <li>Tour & activity booking</li>
            <li>Travel planning apps</li>
            <li>Restaurant reservations</li>
            <li>Vacation rental platforms</li>
            <li>Loyalty & rewards programs</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Features</h3>
          <ul class="u-text">
            <li>Real-time availability</li>
            <li>Multi-currency support</li>
            <li>Review & rating systems</li>
            <li>Interactive maps & routes</li>
            <li>Mobile check-in/out</li>
            <li>Guest communication tools</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Integrations</h3>
          <ul class="u-text">
            <li>Channel managers (Airbnb, Booking.com)</li>
            <li>Payment gateways</li>
            <li>Google Maps & Places</li>
            <li>Email automation</li>
            <li>CRM systems</li>
            <li>Analytics & insights</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="u-container">
      <h2 class="u-heading">Launch your travel platform</h2>
      <Button title="Get started" url="/contact" arrow />
    </div>
  </section>
</Layout>

<style>
  .detail {
    margin: 6rem 0;
  }

  .intro {
    max-width: 42rem;
    margin-bottom: 2.5rem;
  }

  .intro h2 {
    --fs: 2.4rem;
  }

  .intro p {
    color: var(--color-text-alt);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-tablet) {
      grid-template-columns: 1fr;
    }
  }

  .card {
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
  }

  .card h3 {
    --fs: 1.2rem;
    --fw: 500;
    margin-bottom: 1rem;
  }

  .card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
    color: var(--color-text-alt);
  }

  .cta {
    margin: 4rem 0 8rem;
  }

  .cta h2 {
    --fs: 2.2rem;
    margin-bottom: 1rem;
  }
</style>
