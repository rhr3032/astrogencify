---
import Layout from "../../layouts/Layout.astro";
import HeroHome from "../../components/HeroHome.astro";
import Button from "../../components/Button.astro";
---

<Layout title="Marketing & Advertising Industry">
  <HeroHome
    title="Marketing & Advertising Industry"
    subtitle="MarTech platforms that drive campaigns and measure ROI."
    cta={{ title: "Discuss Your Project", url: "/contact" }}
  />

  <section class="detail">
    <div class="u-container">
      <div class="intro">
        <h2 class="u-heading">Marketing Technology That Converts</h2>
        <p class="u-text">
          We build marketing technology platforms that help agencies and brands
          manage campaigns, analyze performance, and optimize conversion rates.
          From marketing automation to analytics dashboards, our solutions
          provide the insights needed to maximize ROI.
        </p>
      </div>
      <div class="grid">
        <div class="card glass-card">
          <h3 class="u-heading">Solutions</h3>
          <ul class="u-text">
            <li>Marketing automation platforms</li>
            <li>Campaign management systems</li>
            <li>Analytics dashboards</li>
            <li>Social media management</li>
            <li>Content management systems</li>
            <li>Lead generation tools</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Features</h3>
          <ul class="u-text">
            <li>Email campaign automation</li>
            <li>A/B testing & optimization</li>
            <li>Multi-channel attribution</li>
            <li>Customer journey tracking</li>
            <li>ROI reporting & analytics</li>
            <li>CRM integration</li>
          </ul>
        </div>
        <div class="card glass-card">
          <h3 class="u-heading">Integrations</h3>
          <ul class="u-text">
            <li>Google Analytics & Ads</li>
            <li>Facebook & Instagram Ads</li>
            <li>HubSpot & Salesforce</li>
            <li>Mailchimp & SendGrid</li>
            <li>Zapier automation</li>
            <li>Custom API connections</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="cta">
    <div class="u-container">
      <h2 class="u-heading">Build your MarTech platform</h2>
      <Button title="Let's talk" url="/contact" arrow />
    </div>
  </section>
</Layout>

<style>
  .detail {
    margin: 6rem 0;
  }

  .intro {
    max-width: 42rem;
    margin-bottom: 2.5rem;
  }

  .intro h2 {
    --fs: 2.4rem;
  }

  .intro p {
    color: var(--color-text-alt);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1.5rem;

    @media (--mq-tablet) {
      grid-template-columns: 1fr;
    }
  }

  .card {
    padding: 2rem;
    border-radius: 1.5rem;
    background: transparent;
    border: none;
  }

  .card h3 {
    --fs: 1.2rem;
    --fw: 500;
    margin-bottom: 1rem;
  }

  .card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
    color: var(--color-text-alt);
  }

  .cta {
    margin: 4rem 0 8rem;
  }

  .cta h2 {
    --fs: 2.2rem;
    margin-bottom: 1rem;
  }
</style>
